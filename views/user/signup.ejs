
<div class="login-register-area pt-85 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ms-auto me-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active"  href="/uselogin">
                            <h4> login </h4>
                        </a>
                        <a data-bs-toggle="tab" href="">
                            <h4> register </h4>
                        </a>
                    </div>
                    <div id="lg2" class="tab-pane">
                        <div class="login-form-container">
                            <% if(locals.error) { %>
                                <div class="alert alert-danger" role="alert"><%= error %></div>
                                <% } %>
                                
                            <div class="login-register-form">
                                <form action="/usersign" method="post">
                                    <span  class=" text-danger" id="name-error"></span>
                                    <input type="text" name="username"  id="check-name" placeholder="Username" onkeyup="return  validateName()">
                                    <span class=" text-danger" id="email-error"></span>
                                    <input name="useremail" placeholder="Email" id="check-email" type="email" onkeyup=" return validateEmail()">
                                    <span class=" text-danger" id="phone-error"></span>
                                    <input name="userphone" placeholder="Phone"  type="number" id="check-phone" onkeyup=" return validatephonenumber()" >
                                    <span class=" text-danger" id="password-error"></span>
                                    <input type="password" name="pass" placeholder="Password" id="check-password" onkeyup="return validatePassword()">
                                    <span class=" text-danger" id="confirmpassword-error"></span>
                                    <input type="password"  placeholder=" Confirm Password" id="check-confirmpassword"  onkeyup="return validateConfirmPassword()">
                                    <div class="button-box">
                                        <button type="submit" id="check-submit" onclick="return validateForm()">Register</button>
                                        <span class=" text-danger text-center" id="submit-error"></span>
                                        
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
    
                </div>
            </div>
        </div>
    </div>
  </div>

  