<div class="product-area pb-60">
    <div class="container">
        <div class="section-title text-center mb-40">
            <h2>All Products</h2>
            <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the
                industry's standard dummy text</p>
        </div>
        <div class="row">
            <% showproduct.forEach(function(product, i){ %>
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                <div class="product-wrap mb-35">
                    <div class="product-img mb-15 ">
                        <a href="/productdetails/<%= product._id %>"><img src="/product_img/<%= product._id %>.jpg" alt="product"></a>
                        <div class="product-action">
                                <button onclick="addtowishlist('<%= product._id %>')" type="button" class="btn bg-transparent"><i class="fa fa-heart-o"></i> </button>
                                 
                                
                        </div>
                    </div>
                    <div class="product-content">
                        <span><%= product.category %></span>
                        <h4><a href="/productdetails/<%= product._id %>"><%= product.productname %></a></h4>
                        <div class="price-addtocart">
                            <div class="product-price">
                                <span>â‚¹<%= product.price %></span>
                            </div>
                            <div class="product-addtocart">
                                <% if (product.stock) { %>
                                    <button onclick="addtocart('<%= product._id %>')" class="btn btn-outline-danger btn-rounded" data-mdb-ripple-color="dark">+ Add To Cart</button>
                                  <% } else { %>
                                    <p  class="ml-20 text-danger">Sorry, this product is currently out of stock.</p>
                                  <% } %>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
         
    </div>
    <script>
        function addtocart(proId){
            $.ajax({
                url:'/add-tocart/'+proId,
                method:'get',
                success:(response)=>{
                    location.reload()
    
                }
            })
        }

        function addtowishlist(proId){
        $.ajax({
            url:'/add-towishlist/'+proId,
            method:'get',
            success:(response)=>{
                location.reload()

            }
        })
    }
    </script>