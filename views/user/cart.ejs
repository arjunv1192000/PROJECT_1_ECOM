<div class="cart-main-area pt-85 pb-90">
    <div class="container mb-100">
        <h3 class="cart-page-title">Your cart items</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <form action="#">
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Until Price</th>
                                    <th>Qty</th>
                                    <!-- <th>Subtotal</th> -->
                                    <th>action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% product.forEach(function(cart, i){ %>

                                    <tr>

                                        <td class="product-thumbnail">
                                            <a href="#"><img class="cartimg"
                                                    src="/product_img1/<%= cart.product._id %>.jpg" alt=""></a>
                                        </td>
                                        <td class="product-name"><a href="#">
                                                <%= cart.product.productname %>
                                            </a></td>
                                        <td class="product-price-cart"><span class="amount" id="proprice">₹<%=cart.product.price %>
                                            </span></td>

                                        <td class="product-quantity">
                                            <div class="cart-plus-minus">
                                                <div class="dec qtybutton">
                                                    <button class="incbtn"
                                                        onclick="changequantity('<%= cart._id %>','<%= cart.product._id %>','<%= totalprice %>','<%=cart.product.price %>',-1) ">-</button>
                                                </div>
                                                <span  id="<%= cart.product._id %>">
                                                    <%= cart.quantity %>
                                                </span>
                                                <div class="inc qtybutton">
                                                    <button class="incbtn"
                                                        onclick="changequantity('<%= cart._id %>','<%= cart.product._id %>','<%= totalprice %>','<%=cart.product.price %>',1 ) ">+</button>
                                                </div>
                                            </div>
                                        </td>
                                        <!-- <td class="product-subtotal"> <span id="<%= cart.product._id %>">₹<%=cart.product.price %></span></td> -->
                                        <td class="product-remove">
                                            <button type="button" class="btn btn-danger"
                                                onclick="remove('<%= cart._id %>','<%= cart.product._id %>',) ">remove</button>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>

                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="cart-shiping-update-wrapper">
                                <div class="cart-shiping-update">
                                    <a href="/showproduct">Continue Shopping</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
                <div class="row ">
                    <div class="col-lg-4 col-md-12 ">
                        <div class="grand-totall">
                            <div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gary-cart">Cart Total</h4>
                            </div>
                            <h5>Total products <span id="totalprice" ><%= totalprice %></span></h5>
                            <div class="total-shipping">

                                <h4 class="grand-totall-title">Grand Total <span id="totalprice"><%= totalprice %></span> </h4>
                                <a href="/checkout_order">Proceed to Checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function changequantity(cartId, proId,totalprice,price,count) {
            let quantity = parseInt(document.getElementById(proId).innerHTML)
           let carttotal= document.getElementById('totalprice').innerHTML

           console.log(carttotal);
          
            

            count = parseInt(count)
            $.ajax({
                url: '/change_product-quantity',
                data: {
                    cart: cartId,
                    product: proId,
                    count: count,
                    quantity: quantity,

                },
                method: 'post',
                success: (response) => {
                    if (response.removeproduct) {
                        alert('product remove from cart')
                        location.reload()

                    } else {
                        document.getElementById(proId).innerHTML = quantity + count
                        document.getElementById('totalprice').innerHTML= parseInt(carttotal)+(count*price)
                        
                        

                        







                    }

                }
            })
        }
        function remove(cartId, proId) {
            $.ajax({
                url: '/product_remove',
                data: {
                    cart: cartId,
                    product: proId
                },
                method: 'post',
                success: (response) => {
                    alert('product remove from cart')
                    location.reload()

                }
            })
        }



    </script>