<div class="catpage" id="footer">
    <form action="/admin/category-add" method="post">
        <div class="row mb-3">
            <label for="inputEmail" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input type="text" name="name" class="form-control">

            </div>
            <div class="col-sm-5">
                <button class="btn btn-secondary" type="submit">Add</button><br>
               

            </div>
        </div>
        <p class="error"></p>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Categories</th>
                <th scope="col">Action</th>
                <th scope="col">offer</th>
            </tr>
        </thead>
        <tbody>
            <% catdatas.forEach(function(catdata, i){ %>
            <tr>
                <td><%= catdata.name %></td>
                <td>
                    <a href="/admin/edit-category/<%= catdata._id%>"><button class="badge btn-secondary" id="my-button" onclick="myFunction(this.id)">Edit</button></a>
                    <a href="/admin/delete-category/<%= catdata._id%>"><button class="badge btn-danger" id="my-button" onclick="return confirm('Are you sure you want to delete this file? This action cannot be undone.')",myFunction(this.id)>Remove</button></a>
                </td>
                <td>
                    <form action="/admin/addoffer-category" method="post">
                        <input type="text" name="catname" value="<%= catdata.name%>" hidden>
                        <input type="text" name="catid" value="<%= catdata._id%>" hidden>

                        <button type="submit" class="badge btn-secondary">
                            Add offer
                        </button>
                    </form>
                   
                    
                </td>
            </tr>
            <% }); %>

        </tbody>
    </table>
</div>