<section id="footer" class="mt-100">
    <div class="container ">
        <h1>Edit Coupons</h1>

        <form action="/admin/Coupon_edit/<%= coupondata._id%>" method="post" >
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">CouponCode</label>
                <div class="col-sm-10">
                    <input type="text" name="CouponCode" class="form-control" value="<%= coupondata.CouponCode%>">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail" class="col-sm-2 col-form-label">CouponName</label>
                <div class="col-sm-10">
                    <input type="text" name="CouponName" class="form-control" value="<%= coupondata.CouponName%>"> 
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail" class="col-sm-2 col-form-label">Discount</label>
                <div class="col-sm-10">
                    <input type="num" name="discount" class="form-control" value="<%= coupondata.discount
                    %>">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputDate" class="col-sm-2 col-form-label">Started date</label>
                <div class="col-sm-10">
                    <input type="date" name="dateofpublish" class="form-control" value="<%= coupondata.dateofpublish%>">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputDate" class="col-sm-2 col-form-label">Ending date</label>
                <div class="col-sm-10">
                    <input type="date" name="dateofexpired" class="form-control" value="<%= coupondata.dateofexpired %>">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputDate" class="col-sm-2 col-form-label">Minimum Amount </label>
                <div class="col-sm-10">
                    <input type="number" name="minimum" class="form-control" value="<%= coupondata.minimum %>">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputDate" class="col-sm-2 col-form-label">Maximum Amount </label>
                <div class="col-sm-10">
                    <input type="number" name="Maximum" class="form-control" value="<%= coupondata.Maximum %>">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">submit</button>
                </div>
            </div>

        </form>
    </div>
</section>