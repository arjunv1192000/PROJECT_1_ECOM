<section class=" ml-300 mt-5" id="footer">
    <div class="btns">
  
         <a href="/admin/getproductof"> <button class="btn btn-success mt-5">Add Product offer</button></a>
    </div>
  
         <table class="table table-bordered" id="example">
                  <thead>
                    <tr>
                      <th scope="col">Product ID</th>
                      <th scope="col">Discount</th>
                      <th scope="col">date of expired</th>
                      <th scope="col">Action</th>
                     
                    </tr>
                  </thead>
                  <tbody>
                    <% offer.forEach(function(product, i){ %>
                    <tr >
                      
                      <td ><%= product.proId %></td>
                      <td><%= product.proDiscount %></td>
                      <td><%= product.dateofexpired.toISOString().split('T')[0];%></td>
                     
                     
                      <td>
                        <a href="/admin/deleteproductoffer/<%=product.proId%>"><button class="badge btn-danger" id="my-button" onclick="return confirm('Are you sure you want to delete this file? This action cannot be undone.')",myFunction(this.id)>Remove</button></a>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                 
  
                </table>
  </section>
